<% layout ('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campgrounds</a>
</div>

<% for(let campground of campgrounds) { %>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%= campground.image %>">
            </div>
            <div class="col-mg-8">
                <div class="card-body">
                    <h5 class="card-title mb-3"><%= campground.title %></h5>
                    <p class="card-text mb-3"><%= campground.description.substring(0, 100) %>...</p>
                    <p class="card-text">
                        <small class="text-muted"><%= campground.location %></small>
                    </p>
            </div>
            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">View</a>
        </div>
    </div>
<% } %>

    
    
